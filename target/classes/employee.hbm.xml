<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "https://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="models.Employee" table="employee">
        <id name="id" column="id" type="integer">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" not-null="true" type="string"/>
        <property name="email" column="email" not-null="true" type="string"/>
        <property name="phone" column="phone" not-null="true" type="string"/>
        <property name="department" column="department" not-null="true" type="string"/>
        <property name="position" column="position" not-null="true" type="string"/>
    </class>
</hibernate-mapping>
